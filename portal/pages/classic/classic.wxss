.calssic-container {
  width: 100%;
  position: relative;
}

.classic-header {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.classic-header .header-left-time {
  margin-left: 20rpx;
  margin-top: 4rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.classic-header .header-left-time .index-container {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}

.index-container .plain {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.index-container .index {
  font-size: 48rpx;
  font-weight: bold;
}

.index-container .line {
  width: 1px;
  height: 60rpx;
  background: #eee;
  margin: 0 20rpx;
}

.classic-header .header-left-time .date-container {
  display: flex;
  flex-direction: column;
}

.date-container .month {
  font-size: 40rpx;
}

.classic-header .header-right-control {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}

.header-right-control .link {
  margin-right: 10rpx;
}

/* 内容区域 */

.classic-content {
  width: 100%;
}

.content-img {
  width: 750rpx;
  height: 480rpx;
}

.content-img .pic {
  width: 750rpx;
  height: 500rpx;
  display: block;
}

.pop-cita {
  text-align: center;
  margin: 180rpx 0 0;
  font-size: 36rpx;
}

.content-tags {
  position: absolute;
  top: 540rpx;
  left: 20rpx;
}

.content-tags image {
  width: 46rpx;
  height: 142rpx;
}

.footer-control {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 80rpx;
}

.nav-control {
  width: 600rpx;
  height: 80rpx;
  background-color: #f7f7f7;
  border-radius: 2px;
  display: inline-flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.nav-control .icon {
  height: 80rpx;
  width: 80rpx;
}
