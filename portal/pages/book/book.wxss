page {
    background: #f1f1f1;
}

.book-container {
    padding: 100rpx 0;
}

.book-header {
    width: 100%;
    height: 100rpx;
    background: #fff;
    padding: 20rpx;
    box-sizing: border-box;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 9;
}

.book-header .search-show {
    width: 100%;
    background: #f1f1f1;
    text-align: center;
    height: 60rpx;
    border-radius: 100rpx;
    line-height: 60rpx;
}

.search-icon {
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
}

.hot-book-list {
    width: 100%;
    height: calc(100% - 100rpx);

}

.book-warpper {
    padding: 0 90rpx;
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}

.hot-warp {
    width: 100%;
    text-align: center;
    margin: 20rpx 0;
}

.hot-img {
    width: 107rpx;
    height: 34rpx;
}